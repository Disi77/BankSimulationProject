<Controls:MetroWindow x:Class="Bank.OfficialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Bank System - Official version" Height="450" Width="800" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
                      BorderBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="2">
    <Grid x:Name="GridOfficialWindow">
        <!-- Main menu-->
        <Menu x:Name="MainMenu" Height="31" 
              VerticalAlignment="Top" Visibility="Visible" 
              Grid.Row="1" Style="{StaticResource MetroMenu}">
            <MenuItem Header="My Account" FontSize="14">
                <MenuItem Header="Change password" Click="ChangePassword_Click"/>
                <MenuItem Header="Update my account" Click="UpdateMyAccount_Click"/>
                <MenuItem Header="Logout" Click="Logout_Click"/>
            </MenuItem>

            <MenuItem Header="Customers" FontSize="14">
                <MenuItem Header="Create new Customer" Click="CreateNewCustomer_Click"/>
                <MenuItem Header="Search Customer" Click="SearchCustomer_Click"/>
            </MenuItem>
        </Menu>

        <Label x:Name="MainLabel" Content="PASSWORD CHANGE" 
               HorizontalAlignment="Left" Margin="36,60,0,0" VerticalAlignment="Top" 
               FontSize="14" FontWeight="Bold" Visibility="Hidden"/>

        <!-- User Password Change -->
        <TextBox x:Name="CurrentPassword" HorizontalAlignment="Left" 
                 Height="24" Margin="36,100,0,0" TextWrapping="Wrap" 
                 Text="Enter current password" VerticalAlignment="Top" 
                 Width="195" 
                 KeyDown="CurrentPasswordOnKeyDownHandler" IsEnabled="True" 
                 PreviewMouseDown="CurrentPasswordOnMouseClick" Visibility="Hidden"/>
        <TextBox x:Name="NewPassword1" HorizontalAlignment="Left" 
            Height="24" Margin="36,140,0,0" TextWrapping="Wrap" 
            Text="Enter new password" VerticalAlignment="Top" 
            Width="195"
            IsEnabled="True"
            PreviewMouseDown="CurrentPasswordOnMouseClick" Visibility="Hidden"/>
        <TextBox x:Name="NewPassword2" HorizontalAlignment="Left" 
            Height="24" Margin="36,170,0,0" TextWrapping="Wrap" 
            Text="Enter new password" VerticalAlignment="Top" 
            Width="195" 
            IsEnabled="True"
            PreviewMouseDown="CurrentPasswordOnMouseClick" Visibility="Hidden"/>
        <Label x:Name="CurrentPasswordLabel" HorizontalAlignment="Left" 
               Content=""
               Margin="236,100,0,0" VerticalAlignment="Top" 
               Height="24" Width="546" Visibility="Hidden"/>
        <Label x:Name="NewPasswordLabel" 
            Content="" HorizontalAlignment="Left" 
            Margin="236,170,0,0" VerticalAlignment="Top" 
            Height="24" Width="546" Visibility="Hidden"/>
        <Button x:Name="ConfirmButton" Content="Confirm" 
                HorizontalAlignment="Left" 
                Margin="36,385,0,0" VerticalAlignment="Top" 
                Width="75"
                Click="ConfirmButton_Click" Visibility="Hidden"/>
        <Button x:Name="StornoButton" Content="Storno" 
            HorizontalAlignment="Left" 
            Margin="121,385,0,0" VerticalAlignment="Top" 
            Width="75"
            Click="StornoButton_Click" Visibility="Hidden"/>


        <!-- Update Official -->
        <Label x:Name="NameLabel" Content="Name:" HorizontalAlignment="Left" 
               Margin="20,102,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="23" 
                 Margin="120,102,0,0" TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top" 
                 VerticalContentAlignment="Bottom"
                 Width="150" Visibility="Hidden"/>
        <Label x:Name="SurnameLabel" Content="Surname:" HorizontalAlignment="Left" 
               Margin="20,127,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <TextBox x:Name="SurnameTextBox" HorizontalAlignment="Left" Height="23" 
                 Margin="120,127,0,0" TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top" 
                 VerticalContentAlignment="Bottom"
                 Width="150" Visibility="Hidden"/>
        <Label x:Name="EmailLabel" Content="Email:" HorizontalAlignment="Left" 
               Margin="20,152,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Height="23" 
                 Margin="120,152,0,0" TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top" 
                 VerticalContentAlignment="Bottom"
                 Width="150" Visibility="Hidden"/>
        <Label x:Name="PhoneLabel" Content="Phone:" HorizontalAlignment="Left" 
               Margin="20,177,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Left" Height="23" 
                 Margin="120,177,0,0" TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top" 
                 VerticalContentAlignment="Bottom"
                 Width="150" Visibility="Hidden"/>
        <Label x:Name="AddressLabel" Content="Address" HorizontalAlignment="Left" 
               Margin="20,202,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <Label x:Name="StreetLabel" Content="Street:" HorizontalAlignment="Left" 
               Margin="20,227,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <TextBox x:Name="StreetTextBox" HorizontalAlignment="Left" Height="23" 
                 Margin="120,227,0,0" TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top" 
                 VerticalContentAlignment="Bottom"
                 Width="150" Visibility="Visible"/>
        <Label x:Name="StreetNumberLabel" Content="Street Number:" HorizontalAlignment="Left" 
               Margin="20,252,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <TextBox x:Name="StreetNumberTextBox" HorizontalAlignment="Left" Height="23" 
                 Margin="120,252,0,0" TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top" 
                 VerticalContentAlignment="Bottom"
                 Width="150" Visibility="Hidden"/>
        <Label x:Name="CityLabel" Content="City:" HorizontalAlignment="Left" 
               Margin="20,277,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <TextBox x:Name="CityTextBox" HorizontalAlignment="Left" Height="23" 
                 Margin="120,277,0,0" TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top" 
                 VerticalContentAlignment="Bottom"
                 Width="150" Visibility="Hidden"/>
        <Label x:Name="PostalCodeLabel" Content="Postal Code:" HorizontalAlignment="Left" 
               Margin="20,302,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <TextBox x:Name="PostalCodeTextBox" HorizontalAlignment="Left" Height="23" 
                 Margin="120,302,0,0" TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top"
                 VerticalContentAlignment="Bottom"
                 Width="150" Visibility="Hidden"/>
        <Label x:Name="CountryLabel" Content="Country:" HorizontalAlignment="Left" 
               Margin="20,327,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <TextBox x:Name="CountryTextBox" HorizontalAlignment="Left" Height="23" 
                 Margin="120,327,0,0" TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top" 
                 VerticalContentAlignment="Bottom"
                 Width="150" Visibility="Hidden"/>
        <Label x:Name="ValidLabel" Content="Valid:" HorizontalAlignment="Left" 
               Margin="250,102,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <TextBox x:Name="ValidTextBox" HorizontalAlignment="Left" Height="23" 
                 Margin="350,102,0,0" TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top" 
                 VerticalContentAlignment="Bottom"
                 Width="150" Visibility="Hidden"/>
        <Label x:Name="UserTypeLabel" Content="User Type:" HorizontalAlignment="Left" 
               Margin="250,127,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <ComboBox x:Name="UserTypeComboBox" Height="23"
                  HorizontalAlignment="Left" 
                  VerticalContentAlignment="Bottom"
                  Margin="350,127,0,0" VerticalAlignment="Top" 
                  Width="150" Visibility="Hidden">
            <ComboBoxItem x:Name="UserTypeComboBox_Customer" Content="Customer" IsSelected="True"/>
            <ComboBoxItem x:Name="UserTypeComboBox_Official" Content="Official" IsSelected="True"/>
        </ComboBox>
        <Label x:Name="UserSubTypeLabel" Content="User Subype:" HorizontalAlignment="Left" 
               Margin="250,152,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Hidden"/>
        <ComboBox x:Name="OfficialSubTypeComboBox" Height="23"
                  HorizontalAlignment="Left" 
                  VerticalContentAlignment="Bottom"
                  Margin="350,152,0,0" VerticalAlignment="Top" 
                  Width="150" Visibility="Hidden">
            <ComboBoxItem x:Name="OfficialSubTypeComboBox_Junior" Content="Junior"/>
            <ComboBoxItem x:Name="OfficialSubTypeComboBox_Normal" Content="Normal"/>
            <ComboBoxItem x:Name="OfficialSubTypeComboBox_Senior" Content="Senior"/>
        </ComboBox>
        <ComboBox x:Name="CustomerSubTypeComboBox" Height="23"
                  HorizontalAlignment="Left" 
                  VerticalContentAlignment="Bottom"
                  Margin="350,152,0,0" VerticalAlignment="Top" 
                  Width="150" Visibility="Hidden">
            <ComboBoxItem x:Name="CustomerSubTypeComboBox_Person" Content="Person"/>
            <ComboBoxItem x:Name="CustomerSubTypeComboBox_Company" Content="Company"/>
        </ComboBox>
        <Label x:Name="LoginLabel" Content="Login:" HorizontalAlignment="Left" 
               Margin="250,177,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Right"
               Width="100" Visibility="Visible"/>
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Height="23" 
                 Margin="350,177,0,0" TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top" 
                 VerticalContentAlignment="Bottom"
                 Width="150" Visibility="Visible"/>

        <!-- Customer Products -->
        <Label x:Name="ListOfProductsLabel" Content="List of products:" HorizontalAlignment="Left" 
               Margin="350,224,0,0" VerticalAlignment="Top" 
               HorizontalContentAlignment="Left"
               Width="100" Visibility="Visible"/>
        <ListView x:Name="AllProductsListView" HorizontalAlignment="Left" Height="95"
                  Margin="350,255,0,0" VerticalAlignment="Top" 
                  Width="160" Visibility="Visible" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Bill Number" Width="100" DisplayMemberBinding="{Binding BillNumber}"/>
                    <GridViewColumn Header="Details" Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="DetailsButton" Content="Details" Click="ViewProductDetails_Click" 
                                        CommandParameter="{Binding BillNumber}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>


        <!-- View user details -->
        <Button x:Name="EditModeButton" Content="Edit mode" 
                HorizontalAlignment="Left" 
                Margin="36,385,0,0" VerticalAlignment="Top" 
                Width="75"
                Click="UserEditModeButton" Visibility="Hidden"/>

        <!-- Update user -->
        <Button x:Name="UpdateUserButton" Content="Update" 
                HorizontalAlignment="Left" 
                Margin="36,385,0,0" VerticalAlignment="Top" 
                Width="75"
                Click="UpdateUserInDatabaseButton" Visibility="Hidden"/>

        <!-- Create customer-->
        <Button x:Name="CreateCustomerButton" Content="Create" 
                HorizontalAlignment="Left" 
                Margin="36,385,0,0" VerticalAlignment="Top" 
                Width="75"
                Click="CreateNewCustomerInDB_Click" Visibility="Hidden"/>

        <!-- Search box -->
        <Label x:Name="SearchLabel" Content="ADMIN SEARCH:" 
               HorizontalAlignment="Left" Margin="36,60,0,0" VerticalAlignment="Top" 
               FontSize="14" FontWeight="Bold" Visibility="Hidden"/>
        <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" Height="29" Margin="177,60,0,0" 
                 TextWrapping="Wrap" Text="Enter user name ..." VerticalAlignment="Top" Width="579"
                 Visibility="Hidden" PreviewMouseDown="SearchTextBox_MouseDown" 
                 KeyDown="SearchTextBox_KeyDownHandler"/>

        <!-- All customers view -->
        <ListView x:Name="AllCustomersListView" HorizontalAlignment="Left" Height="264" 
                  Margin="36,98,0,0" VerticalAlignment="Top" 
                  Width="720" Visibility="Hidden" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Surname" DisplayMemberBinding="{Binding SurName}"/>
                    <GridViewColumn Header="Customer Type" DisplayMemberBinding="{Binding CustomerType}"/>
                    <GridViewColumn Header="Valid" DisplayMemberBinding="{Binding Valid}"/>
                    <GridViewColumn Header="Mail" DisplayMemberBinding="{Binding Mail}"/>
                    <GridViewColumn Header="Phone" DisplayMemberBinding="{Binding Phone}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="ViewDetailsButton" Content="Details" 
                HorizontalAlignment="Left" 
                Margin="36,385,0,0" VerticalAlignment="Top" 
                Width="75"
                Click="ClickOnButtonViewDetails" Visibility="Hidden"/>
        
        
        <Button x:Name="SecretButton" Content="Secret page" 
                HorizontalAlignment="Left" Margin="707,60,0,0" 
                VerticalAlignment="Top" Width="75" Visibility="Hidden"
                Click="OpenSecretPage"/>


    </Grid>
</Controls:MetroWindow>
