<Window x:Class="Bank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Bank system" Height="250" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid x:Name="MainWindow1" Margin="0,0,2,-31">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Log in" HorizontalAlignment="Left" Margin="50,134,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="23" Margin="50,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="23" Margin="50,106,0,0" VerticalAlignment="Top" Width="120" 
                     PasswordChar="•" KeyDown="PasswordBoxOnKeyDownHandler"/>
        <TextBlock HorizontalAlignment="Left" Height="26" Margin="50,53,0,0" TextWrapping="Wrap" Text="Enter your credentials:" VerticalAlignment="Top" Width="151"/>
        <Image Height="121" Margin="642,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="121"/>
        
    </Grid>
</Window>
